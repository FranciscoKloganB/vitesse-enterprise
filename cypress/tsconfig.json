{
  "compilerOptions": {
    "baseUrl": "../",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["es6", "dom"],
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./*"]
    },
    "target": "es6",
    "types": ["cypress", "cypress-wait-until", "@testing-library/cypress", "node"]
  },
  "exclude": [
    "node_modules",
    // Unit and Integration tests of any kind that are not owned by Cypress
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": ["**/*.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
